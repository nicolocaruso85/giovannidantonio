{%
  set classes = [
    'node',
    'node-detail',
    'node--type-' ~ node.bundle|clean_class,
    node.isPromoted() ? 'node--promoted',
    node.isSticky() ? 'node--sticky',
    not node.isPublished() ? 'node--unpublished',
    view_mode ? 'node--view-mode-' ~ view_mode|clean_class,
    'clearfix',
  ]
%}

{# View full node #}
{% if page %}
<article{{ attributes.addClass(classes) }}>
  <div class="post-block article-detail">
    <div class="block">
      
      <div class="post-top">
        <div class="post-meta category-background">{{ content.field_post_category }}<span class="post-created"> {{ date }}</span> / <span class="post-comment">{{ comment_count }} {{ 'Comments'|t }}</span> </div>
        
        <h1{{ title_attributes.addClass('post-title') }}>{{ label }}</h1>
      </div>  

      <div class="post-thumbnail">
        {{ content.field_image }}
      </div>

      <div class="post-content">
        <div{{ content_attributes.addClass('node__content', 'clearfix') }}>
          {{ content|without('field_image', 'field_post_category', 'field_tags', 'field_post_format', 'field_post_type', 'field_post_embed', 'field_post_gallery','field_taxonomy_color' ,'comment', 'links') }}
        </div>
        <div class="post-tags clearfix">
          {{ content.field_tags }}
        </div>  
      </div>

    </div>  

    <div class="related-posts margin-top-30">
      {{ related_content }}
    </div>

    {% if content.comment %}
      <div id="node-single-comment" class="block">
        {% if comment_count > 0 %} 
          <div class="comment-count"><span>{{ comment_count }} Comments </span></div>
        {% endif %}  
        {{ content.comment }}
      </div>
    {% endif %}  

  </div>

</article>

<!-- End Display article for detail page -->
{% endif %}